{
  "name": "financial-system-enterprise",
  "version": "1.0.0",
  "description": "Enterprise Financial System with DDD Architecture, Microservices, Audit Compliance, and Payment Gateway Integrations",
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:domain": "jest tests/financial/domain",
    "test:application": "jest tests/financial/application",
    "test:infrastructure": "jest tests/financial/infrastructure",
    "type-check": "tsc --noEmit",
    "db:migrate": "supabase migration up",
    "db:reset": "supabase db reset",
    "db:generate-types": "supabase gen types typescript --local > types/supabase.ts"
  },
  "keywords": [
    "financial-system",
    "enterprise",
    "ddd",
    "microservices",
    "audit",
    "compliance",
    "payment-gateway",
    "stripe",
    "pagarme",
    "typescript",
    "react",
    "nextjs",
    "supabase"
  ],
  "author": "Enterprise Financial Team",
  "license": "MIT",
  "dependencies": {
    "@supabase/supabase-js": "^2.38.0",
    "stripe": "^14.5.0",
    "next": "^14.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^2.8.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.294.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.0.0",
    "tailwind-merge": "^2.0.0",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-progress": "^1.0.3",
    "@radix-ui/react-badge": "^1.0.0",
    "tailwindcss": "^3.3.0",
    "autoprefixer": "^10.4.16",
    "postcss": "^8.4.31"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.11",
    "@types/jest": "^29.5.5",
    "typescript": "^5.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "jest-junit": "^16.0.0",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/user-event": "^14.5.1",
    "eslint": "^8.51.0",
    "eslint-config-next": "^14.0.0",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "prettier": "^3.0.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.2",
    "supabase": "^1.100.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/financial-system-enterprise.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/financial-system-enterprise/issues"
  },
  "homepage": "https://github.com/your-org/financial-system-enterprise#readme",
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{js,jsx,json,css,md}": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run test:ci && npm run type-check"
    }
  },
  "jest-junit": {
    "outputDirectory": "coverage",
    "outputName": "junit.xml"
  }
}