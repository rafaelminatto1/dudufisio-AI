{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client"
    ],

    /* Linting - Strict mode for healthcare compliance */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": false,

    /* Healthcare data privacy */
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Path mapping */
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["./components/*"],
      "@/pages/*": ["./pages/*"],
      "@/services/*": ["./services/*"],
      "@/hooks/*": ["./hooks/*"],
      "@/contexts/*": ["./contexts/*"],
      "@/types/*": ["./types/*"],
      "@/lib/*": ["./lib/*"]
    }
  },
  "include": [
    "components",
    "pages",
    "services",
    "hooks",
    "contexts",
    "types",
    "lib",
    "design-system",
    "index.tsx",
    "App.tsx",
    "AppRoutes.tsx",
    "types/**/*.d.ts",
    "types/env.d.ts",
    "vite-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "tests/**/*",
    "testsprite_tests/**/*",
    "database",
    "prisma",
    "docs",
    "scripts",
    "workers/**/*",
    "components/auth/AuthProvider.tsx",
    "components/auth/UserMenu.tsx",
    "components/pacientes/PatientList.tsx",
    "lib/actions/**/*",
    "lib/auth.ts",
    "middleware.ts",
    "next.config.js",
    "next.config.mjs"
  ]
}
